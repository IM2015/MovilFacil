<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
       android:background="@drawable/buttonshape"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:orientation="vertical">
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_margin="5dp"
                android:id="@+id/ivImagen"
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:contentDescription="@string/app_name"
                android:src="@drawable/user168" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:textSize="14sp"
                    android:id="@+id/tvNombre"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:textAppearance="?android:attr/textAppearanceMedium" />
                <TextView
                    android:textSize="13sp"
                    android:id="@+id/tvTfno"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:textSize="12sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="12/12/2015 22:00"
                    android:id="@+id/tvDate" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout android:layout_width="fill_parent" android:layout_height="2dp" android:layout_margin="5dp" android:background="@color/separator">

        </LinearLayout>
        <TextView
            android:textColor="#151618"
            android:layout_margin="5dp"
            android:textSize="13sp"
            android:textStyle="normal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/tvTexto"
             />
    </LinearLayout>
</RelativeLayout>