<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.im2015.movilfacil.menu_Inicio"
    android:id="@+id/App">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/inicio_btn3"
        android:id="@+id/btnContactos"
        android:layout_marginTop="53dp"
        android:layout_alignTop="@+id/button4" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/inicio_btn1"
        android:id="@+id/button2"
        android:layout_above="@+id/btnContactos"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/inicio_btn2"
        android:id="@+id/button3"
        android:layout_alignTop="@+id/button2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Button"
        android:id="@+id/button4"
        android:layout_marginBottom="43dp"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/button2"
        android:layout_toStartOf="@+id/button2" />

    <ImageButton
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/ibFav1"
        android:src="@drawable/user168"
        android:scaleType="centerInside"
        android:nestedScrollingEnabled="true"
        android:layout_marginBottom="190dp"
        android:layout_above="@+id/btnContactos"
        android:layout_toStartOf="@+id/button4"
        android:layout_alignRight="@+id/btnContactos"
        android:layout_alignEnd="@+id/btnContactos" />

    <ImageButton
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/ibFav3"
        android:src="@drawable/user168"
        android:scaleType="centerInside"
        android:nestedScrollingEnabled="true"
        android:layout_alignTop="@+id/ibFav1"
        android:layout_toEndOf="@+id/ibFav1"
        android:layout_alignBottom="@+id/ibFav1"
        android:layout_alignLeft="@+id/button3"
        android:layout_alignStart="@+id/button3" />

    <ImageButton
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/ibFav2"
        android:src="@drawable/user168"
        android:scaleType="centerInside"
        android:nestedScrollingEnabled="true"
        android:layout_alignTop="@+id/ibFav3"
        android:layout_toLeftOf="@+id/ibFav3"
        android:layout_toEndOf="@+id/btnContactos"
        android:layout_alignBottom="@+id/ibFav1" />

    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/horizontalScrollView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/ibFav3" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ibGestionFavs"
        android:src="@drawable/settings48"
        android:layout_below="@+id/ibFav3"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ProgressBar
        style="@style/Base.Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pbBateria"
        android:layout_alignTop="@+id/btnContactos"
        android:layout_alignRight="@+id/button3"
        android:layout_alignEnd="@+id/button3"
        android:layout_toRightOf="@+id/ibFav2"
        android:layout_toEndOf="@+id/ibFav2"
        android:indeterminate="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvBateria"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/pbBateria" />

    <TextClock
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textClock"
        android:layout_below="@+id/ibGestionFavs"
        android:layout_centerHorizontal="true" />

    <DigitalClock
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/digitalClock"
        android:layout_below="@+id/textClock"
        android:layout_alignLeft="@+id/textClock"
        android:layout_alignStart="@+id/textClock" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/tvFav1"
        android:layout_alignTop="@+id/horizontalScrollView"
        android:layout_toRightOf="@+id/horizontalScrollView"
        android:layout_toEndOf="@+id/horizontalScrollView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/tvFav2"
        android:layout_alignBottom="@+id/tvFav1"
        android:layout_toRightOf="@+id/ibFav1"
        android:layout_toEndOf="@+id/ibFav1"
        android:layout_marginLeft="17dp"
        android:layout_marginStart="17dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/tvFav3"
        android:layout_alignBottom="@+id/tvFav2"
        android:layout_alignLeft="@+id/ibFav3"
        android:layout_alignStart="@+id/ibFav3"
        android:layout_marginLeft="14dp"
        android:layout_marginStart="14dp" />

</RelativeLayout>
