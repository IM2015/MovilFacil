<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.im2015.movilfacil.menu_Inicio"
    android:id="@+id/App">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:orientation="vertical" >
        <Button
            android:background="#3fffffff"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ibGestionFavs"
            android:drawableLeft="@drawable/settings48"
            android:text="@string/btn_admin_favs"

            android:layout_marginBottom="5dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"
            android:orientation="horizontal" >

            <ImageButton
                android:background="@drawable/favorite_shape"
                android:scaleType="centerInside"
                android:nestedScrollingEnabled="true"
                android:layout_width="109dp"
                android:layout_height="fill_parent"
                android:id="@+id/ibFav1"
                android:src="@drawable/user168"
                />
            <ImageButton
                android:background="@drawable/favorite_shape"
                android:scaleType="centerInside"
                android:nestedScrollingEnabled="true"
                android:layout_width="109dp"
                android:layout_height="fill_parent"
                android:id="@+id/ibFav2"
                android:src="@drawable/user168"
                />
            <ImageButton
                android:background="@drawable/favorite_shape"
                android:scaleType="centerInside"
                android:nestedScrollingEnabled="true"
                android:layout_width="109dp"
                android:layout_height="fill_parent"
                android:id="@+id/ibFav3"
                android:src="@drawable/user168"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:orientation="horizontal" >
            <TextView
                style="@style/name_label"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:id="@+id/tvFav1" />
            <TextView
                style="@style/name_label"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:id="@+id/tvFav2"
                />
            <TextView
                style="@style/name_label"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:id="@+id/tvFav3" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="275dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="20dp"
            android:orientation="vertical" >

            <DigitalClock
                style="@style/homeClock"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/digitalClock"
                android:gravity="center"
                />

            <ProgressBar
                style="@style/Base.Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:id="@+id/pbBateria"
                android:indeterminate="false" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:id="@+id/tvBateria" />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="105dp"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"
            android:orientation="horizontal" >
            <Button
                style="@style/buttons.contactos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/inicio_btn3"
                android:id="@+id/btnContactos"
                android:drawableTop="@drawable/user91"
                />

            <Button
                style="@style/buttons.llamadas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/inicio_btn1"
                android:id="@+id/button2"
                android:drawableTop="@drawable/phone_64x"
                />

            <Button
                style="@style/buttons.mensajes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/inicio_btn2"
                android:id="@+id/button3"
                android:drawableTop="@drawable/message_64x"
                />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>