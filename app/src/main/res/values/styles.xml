<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->



    <color name="panel">#F24C27</color>


    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowBackground">@drawable/back</item>
        <item name="android:textColor">#FFF</item>
        <item name="android:typeface">monospace</item>
        <item name="android:letterSpacing">1</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16dp</item>

        <item name="android:actionBarStyle">@style/ActionStyle </item>
        <item name="actionBarStyle">@style/ActionStyle </item>
        <item name="android:actionBarTabTextStyle">@style/textoActionBar</item>
        <item name="actionBarTabTextStyle">@style/textoActionBar </item>
        <item name="android:actionMenuTextColor">#000 </item>
        <item name="actionMenuTextColor">#000 </item>
        <!-- Customize your theme here. -->
    </style>

    <style name="textoActionBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textColor">#000</item>
    </style>

    <style name="ActionStyle" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="background">@color/custom_theme_color2</item>

    </style>


    <style name="buttons">
        <item name="android:background">@color/invisible_zone </item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#000</item>
        <item name="android:padding">10dp</item>
        <item name="android:textSize">12sp</item>
    </style>
    <style name="buttons.ajustes">
        <item name="android:background">#10ffffff</item>
        <item name="android:padding">10dp</item>
    </style>
    <style name="buttons.contactos">
        <item name="android:background">@drawable/button_shape_contact</item>
    </style>
    <style name="buttons.mensajes">
        <item name="android:background">@drawable/button_shape_message</item>
    </style>
    <style name="buttons.llamadas">
        <item name="android:background">@drawable/buttonshape</item>
    </style>
    <style name="name_label">
        <item name="android:textSize">14dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="invisible_area">
        <item name="android:background">@color/invisible_zone</item>
    </style>
    <style name="name_label_small">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
    </style>
<style name="homeClock">
    <item name="android:textSize">55sp</item>
</style>
    <style name="homeClock_small">
        <item name="android:textSize">40sp</item>
    </style>
    <style name="text">
        <item name="android:padding">4dip</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="panel" >
        <item name="android:radius">10pt</item>
        <item name="android:background">#99FFFFFF</item>
        <item name="android:textColor">#000</item>
        <item name="android:padding">10dp</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="panelButtons" >
        <item name="android:padding">5dp</item>
    </style>

    <style name="layout">
        <item name="android:background">#3ffffffA</item>

    </style>
<style name="favoriteRow">
    <item name="android:background">@drawable/buttonshape</item>
    <item name="android:textColor">#000</item>
</style>
    <style name="Rowtext">
        <item name="android:padding">5dp</item>
        <item name="android:textColor">#000</item>
        <item name="android:textSize">11dp</item>
    </style>
    <style name="Rowheader">
        <item name="android:padding">10dp</item>
    </style>
    <style name="Rowtitle">
        <item name="android:textColor">#000</item>
        <item name="android:textSize">13dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="edit_text">
        <item name="android:background">@drawable/buttonshape</item>
        <item name="android:textColor">#151618</item>
        <item name="android:textSize">15dp</item>

    </style>



</resources>