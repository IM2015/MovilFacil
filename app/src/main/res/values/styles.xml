<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->

    <color name="custom_theme_color">#bb121212</color>
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowBackground">@color/custom_theme_color</item>
        <item name="android:textColor">#FFF</item>
        <item name="android:typeface">monospace</item>
        <item name="android:letterSpacing">1</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16dp</item>
        <item name="android:fontFamily">Roboto-Thin</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="buttons">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#000</item>
        <item name="android:textSize">17dp</item>
    </style>
    <style name="buttons.ajustes">
        <item name="android:background">#3fffffff</item>
        <item name="android:padding">10dp</item>
    </style>
    <style name="buttons.contactos">
        <item name="android:background">@drawable/button_shape_contact</item>
    </style>
    <style name="buttons.mensajes">
        <item name="android:background">@drawable/button_shape_message</item>
    </style>
    <style name="buttons.llamadas">
        <item name="android:background">@drawable/buttonshape</item>
    </style>
    <style name="name_label">
        <item name="android:layout_width">110dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
    </style>
<style name="homeClock">
    <item name="android:textSize">55dp</item>

</style>
    <style name="text">
        <item name="android:padding">4dip</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="layout">
        <item name="android:background">#3fffffff</item>

    </style>
<style name="favoriteRow">
    <item name="android:background">#FFF</item>
    <item name="android:textColor">#000</item>
</style>
    <style name="favoriteRow.text">
        <item name="android:padding">5dp</item>
        <item name="android:textColor">#000</item>
        <item name="android:textSize">11dp</item>
    </style>
    <style name="favoriteRow.title">
        <item name="android:gravity">center</item>
    </style>

    <style name="edit_text">
        <item name="android:background">#1FFF</item>
        <item name="android:textColor">#FFF</item>
        <item name="android:textSize">15dp</item>

    </style>



</resources>